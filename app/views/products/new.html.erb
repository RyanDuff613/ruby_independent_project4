<h1>Add a new product to the inventory</h1>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :country_of_origin %>
  <%= f.text_field :country_of_origin %>
  <br>
  <%= f.label :cost %>
  <%= f.text_field :cost %>
  <br>
  <%= f.submit  %>
<% end %>