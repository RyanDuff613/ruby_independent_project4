<h1>Add a new product to the inventory</h1>
<%= render "layouts/errors", :object => @product %>


<%= form_for @product do |f| %>
  <%= f.label :name %><span>:</span>
  <%= f.text_field :name %>
  <br>
  <%= f.label :country_of_origin %><span>:</span>
  <%= f.text_field :country_of_origin %>
  <br>
  <%= f.label :cost %><span>:</span>
  <%= f.text_field :cost %>
  <br>
  <button type=submit>Create Product</button>
<% end %>
<br>
  <a href="/products"><button>See all our Products</button></a>
