<h1><%= @product.name %></h1>
<h4>Origin: <%= @product.country_of_origin %></h4>
<h4>Price: $ <%= @product.cost %></h4>

<hr>


<% if @product.reviews.any? %>
  <h4>This product has been reviewed by:</h4>

  <% @product.reviews.each do |review| %>
    <ul>
      <li>
          <a href="/products/<%= review.product_id %>/reviews/<%=review.id %>"><button><%= review.author %></button></a>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>No current reviews for <%= @product.name %></p>
<% end %>

<hr>

<a href="/products/<%= @product.id %>/reviews/new"><button>Add Review for this Product</button></a>
<br>
<a href="/products/<%= @product.id %>/edit"><button name="edit">Edit this Product</button></a>
<br>
<%=button_to 'Delete From Inventory', {:controller => :products, :action => 'destroy', :id => @product.id }, :method => :delete%>
<br>
<a href="/products"><button>Return to Inventory</button></a>