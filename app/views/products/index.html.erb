<h1>Products</h1>

<% if @products.any? %>
  <ul>
    <% @products.each do |product| %>
      <li><button><%= link_to product.name, product_path(product) %></button></li>
    <% end %>
  </ul>
<% else %>
  <p>No products currently in stock</p>
<% end %>


<p><button><%= link_to "Add new product to inventory", new_product_path %></button></p>