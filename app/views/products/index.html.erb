<h1>Products</h1>

<% if @products.any? %>
  <ul>
    <% @products.each do |product| %>
      <li><form method="get" action="/products/<%= product.id %>">
            <button><%= product.name %><span> - $<%= product.cost %></span></button>
          </form>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No products currently in stock</p>
<% end %>


<p><%= link_to "Add new product to inventory", new_product_path %></p>
