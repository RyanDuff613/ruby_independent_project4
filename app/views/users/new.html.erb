<h4>Sign In as User</h4>

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %></label>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>
  <button type="submit">Register as User</button>
<% end  %>
